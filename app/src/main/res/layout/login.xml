<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/back"
            android:orientation="horizontal"
            android:alpha="0.2">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/below3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.2"
                android:background="@drawable/back">

                <!--<Button-->
                    <!--android:id="@+id/roam"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="17sp"-->
                    <!--android:text="LOGIN"-->
                    <!--android:textColor="@color/onclick"-->
                    <!--android:background="@drawable/roam"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:layout_marginLeft="8dip"-->
                    <!--android:layout_marginRight="8dip"-->
                    <!--android:layout_marginBottom="5dp"-->

                    <!--/>-->


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!--card_view:cardCornerRadius="10dp"-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        card_view:cardElevation="5dp"
        android:layout_marginTop="120dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/relativeLayout"
            android:clipToPadding="false">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="60dp">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="70dp"
                android:ems="10"
                android:hint="Student/Faculty ID"
                android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/watts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/watts2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:ems="10"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:text="" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/watts"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/watts"
                android:padding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit ="marquee_forever"
                android:text="For forgot password issues please contact school Administrator" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/watts"
                android:layout_alignRight="@+id/watts"
                android:textColor="#3b5998"
                android:text="Sign Up" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_light"
            android:id="@+id/below"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/lolo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Login into Amber"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_marginRight="12dip"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/LogOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/help"
        app:fabSize="mini"
        app:backgroundTint="#f1f1f1"
        android:alpha="0.7"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="9dp" />

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton

        android:id="@+id/hy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@drawable/signupbtn"
        android:text="LOGIN"
        android:textSize="18dp"
        android:textStyle="bold"
        android:elevation="5dp"
        android:stateListAnimator="@anim/rotate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#3b5998"
        app:spinning_bar_color="#000000"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />

</android.support.design.widget.CoordinatorLayout>